<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quizlist - Javascript Quiz</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/quiz.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include("partials/_header") %>
  
  <main>
    <% for (const quiz of quizzes) { %>
    <section class="quiz-listing">
      <div class="quiz-info-bar">
        <a class="quiz-title" href="/quiz/<%= quiz.id %>"><%= quiz.title %></a>
      </div>
      <p class="quiz-desc"><%= quiz.description %></p>
    </section>
    <% } %>

    <!-- Add the form for attempting quizzes here -->
    <form action="/attempt" method="POST">
      <!-- Include form fields here -->
      <button type="submit">Start Quiz</button>
    </form>
  </main>
</body>

</html>

</html>
