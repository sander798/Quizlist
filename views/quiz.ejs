<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quizlist - <%= quiz.title %> Quiz</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/quiz.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include("partials/_header") %>
  
  <main>
    <span id="quiz-title"><%= quiz.title %></span>

  <% for (const question of quiz.questions) { %>
    <section class="question">
      <div class="question-info">
        <span class="question-title"><%= question.title %></span>
        <p class="question-desc"><%= question.description %></p>
      </div>
      <textarea class="user-answer"></textarea>
    </section>
    <% } %>

    <button type="submit" id="submit-answers-button">Submit Answers</button>
  </main>
</body>

</html>

</html>
