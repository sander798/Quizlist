<header>
  <link rel="stylesheet" href="/styles/header.css" />
  
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">Quizlist</a>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <a class="nav-item nav-link" href="/new">Create New Quiz</a>
      <% if (false) {%>
        <label>Logged in: <%= user.username %></label>
        <form class="form-inline" action="/logout" method="POST">
          <button type="submit" class="btn btn-primary">Logout</button>
        </form>
      <% } else { %>
        <form class="form-inline" action="/login" method="GET">
          <button type="submit" class="btn btn-primary">Log in</button>
          <input class="form-control" type="text" name="username">username</input>
          <input class="form-control" type="text" name="password">password</input>
        </form>
      <% } %>
    </div>
    
  </nav>
</header>